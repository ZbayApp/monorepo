{
  "name": "@quiet/headless",
  "version": "0.0.1",
  "description": "Headless quiet backend",
  "types": "lib/index.d.ts",
  "type": "module",
  "exports": "lib/index.js",
  "author": "",
  "license": "GPL-3.0-or-later",
  "private": true,
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "prepare": "npm run build",
    "version": "git add -A src",
    "start:dev": "cross-env NODE_ENV=development nodemon -I --exec node --experimental-specifier-resolution=node  --loader ts-node/esm ./src/main.ts",
    "lint:no-fix": "eslint --ext .jsx,.js,.ts,.tsx ./src/",
    "lint": "npm run lint:no-fix -- --fix",
    "lint-ci": "npm run lint:no-fix",
    "lint-staged": "lint-staged --no-stash",
    "test-nest": "cross-env NODE_OPTIONS=\"--experimental-vm-modules --experimental-global-customevent\" DEBUG=ipfs:*,backend:* node_modules/jest/bin/jest.js --detectOpenHandles --forceExit   ./src/nest/**/*.spec.ts",
    "rmDist": "rimraf lib/"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:TryQuiet/headless.git"
  },
  "files": [
    "lib/**/*",
    "package-lock.json"
  ],
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "clearMocks": true,
    "coverageProvider": "v8",
    "transformIgnorePatterns": [
      "node_modules/(?!p-defer|peer-id)"
    ],
    "testTimeout": 40000,
    "setupFiles": [
      "./jestSetup.ts"
    ],
    "testEnvironment": "jest-environment-node"
  },
  "devDependencies": {
    "@jest/globals": "29.7.0",
    "@quiet/eslint-config": "^2.0.2-alpha.0",
    "@types/get-port": "4.2.0",
    "@types/jest": "28.1.8",
    "@types/luxon": "^3.4.2",
    "@types/mock-fs": "^4.13.1",
    "@types/node": "18.11.9",
    "@types/node-fetch": "^2.5.11",
    "@types/tmp": "^0.2.3",
    "babel-jest": "^29.3.1",
    "backend-bundle": "^2.0.1-alpha.4",
    "cross-env": "^5.2.0",
    "fetch-mock-jest": "^1.5.1",
    "jest": "^29.4.2",
    "lint-staged": "^15.2.2",
    "mock-fs": "^5.1.2",
    "nodemon": "^3.1.9",
    "pvutils": "^1.1.3",
    "tmp": "^0.2.1",
    "ts-jest": "^29.0.3",
    "ts-loader": "9.4.2",
    "ts-node": "10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.3",
    "webpack": "5.75.0",
    "webpack-cli": "5.0.1"
  },
  "dependencies": {
    "@peculiar/webcrypto": "1.4.3",
    "@quiet/common": "^2.0.2-alpha.1",
    "@quiet/logger": "^2.0.2-alpha.0",
    "@quiet/state-manager": "^2.0.2-alpha.3",
    "@quiet/types": "^2.0.2-alpha.1",
    "luxon": "^3.5.0",
    "pkijs": "^3.2.4"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": "npm run lint:no-fix"
  },
  "volta": {
    "extends": "../../package.json"
  }
}
